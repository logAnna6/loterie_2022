@model Loterie_project_2022.Models.Game.IndexViewModel

@{
    ViewData["Title"] = "Page d'accueil";
}
@{

    var prize = ViewData["prize"];
    var lastg = ViewData["startGame"];
    var endg = ViewData["endGame"];
}

<div class="tirage">
